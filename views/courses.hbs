<h1>Courses</h1>

{{#if courses.length}}
    <div class="row">
        {{#each courses }}
            <div class="col s4">
                <div class="card">
                    <div class="card-image">
                        <img src="{{image}}" alt="{{name}}">
                    </div>
                    <div class="card-content">
                        <span class="card-title">{{name}}</span>
                        <p class="price">{{price}}</p>
                    </div>
                    <div class="card-action">
                        <a href="courses/{{id}}">Course show</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{else}}
    <p>Courses not found</p>
{{/if}}